@font-face {
  font-family: Erbaum;
  font-weight: bold;
  src: url("./assets/fonts/The\ Northern\ Block\ Ltd\ -\ Erbaum\ Bold.otf")
    format("opentype");
}

#video-bg {
  position: fixed;
  right: 0;
  bottom: 0;
  min-width: 100%;
  min-height: 100%;
}

.container {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.speaker {
  min-width: 40px;
  margin: 0;
  padding: 0.5em;
  font-family: Erbaum, sans-serif !important;
  font-size: 66px;
  font-weight: bold;
  text-align: center;
  line-height: 1.3em;
  font-style: normal
}

.speaker:focus {
  outline: none;
}

.neon-text {
  --color-100: rgb(0, 211, 255);
  --color-50: rgba(0, 211, 255, 0.5);
  -webkit-text-fill-color: transparent;
  -webkit-text-stroke: 3px var(--color-100);
  filter: drop-shadow(0px 2px 2px var(--color-100))
    drop-shadow(0px 0px 4px var(--color-50))
    drop-shadow(0px 0px 10px var(--color-50))
    drop-shadow(0px 0px 30px var(--color-50))
    drop-shadow(0px 0px 50px var(--color-100));

  color: var(--color-100);
  caret-color: transparent;
}

.speaker * {
  overflow: visible;
}

::selection {
  background-color: transparent;
}
::-moz-selection {
  background-color: transparent;
}

